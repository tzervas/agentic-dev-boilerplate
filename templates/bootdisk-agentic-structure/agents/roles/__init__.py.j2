def get_agent_role(role_name: str):
    """Get agent role class by name."""
    role_map = {
        "swe": SoftwareEngineerAgent,
        "test_engineer": TestEngineerAgent,
        "project_manager": ProjectManagerAgent,
        "qa_evaluator": QAEvaluatorAgent,
        "communicator": CommunicatorAgent,
        "devops": DevOpsAgent,
        "security": SecurityAgent,
        "documentation": DocumentationAgent
    }

    if role_name not in role_map:
        raise ValueError(f"Unknown agent role: {role_name}")

    return role_map[role_name]
